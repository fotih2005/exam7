<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teacher</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

  </head>
  <body>
    <!-- Modal -->
    <div
      class="modal fade"
      id="staticBackdrop"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="staticBackdropLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Add homework</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form class="homeworkForm">
              <div class="form-floating">
                <textarea
                  name="homework"
                  class="homeworkInput form-control"
                  placeholder="Leave a comment here"
                  id="floatingTextarea"
                ></textarea>
                <label for="floatingTextarea">Homework</label>
              </div>
              <button type="submit" class="btn btn-primary mt-3">Submit</button>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div id="groups" class="mt-5">
        <ul class="d-flex list-unstyled align-items-stretch">
                <% for(let i of groups){ %>
                    <li class="pe-3">
                      <div class="groupsCard card" style="width: 18rem;">
                        <div class="card-body">
                          <h5 class="card-title"><b>Group:</b> <%= i.name %> </h5>
                          <p class="card-text"><b>Teacher:</b> <%= i.teacher %> </p>
                          <p class="card-text"><b>Course:</b> <%= i.course %> </p>
                          <p class="card-text"><b>Homework:</b> <%= i.homework %> </p>
                        </div>
                        <div class="formWrapper p-1 border border-dark w-100 mt-2" id="formWrapper">
                          <form action="/addHomework/<%= i.id %>" method="POST" enctype="application/x-www-form-urlencoded">
                            <input class="form-control" type="text" name="homework" placeholder="Homework">
                            <button class="btn btn-primary mt-1 w-100" type="submit">Add homework</button>
                        </form>
                        </div>
                      </div>
                    </li>
                <% } %>  
        </ol>
      </div>
    </div>

    <script src="/assets/js/teacher.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
